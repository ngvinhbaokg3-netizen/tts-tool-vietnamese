FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-very-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Database
DATABASE_URL=postgresql://tts_user:tts_password@localhost:5432/tts_vietnamese
# For development, you can use SQLite:
# DATABASE_URL=sqlite:///tts_vietnamese.db

# Redis
REDIS_URL=redis://localhost:6379

# File Upload Settings
MAX_CONTENT_LENGTH=104857600  # 100MB in bytes
UPLOAD_FOLDER=uploads
OUTPUT_FOLDER=outputs
VOICE_SAMPLES_FOLDER=voice_samples

# Voice Cloning Settings
MIN_AUDIO_DURATION=10
MAX_AUDIO_DURATION=300

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Admin Account (for initial setup)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@tts-vietnamese.com
ADMIN_PASSWORD=change-this-password

# Server Settings
HOST=0.0.0.0
PORT=5000

# Production Settings
# SENTRY_DSN=your-sentry-dsn
# LOG_LEVEL=INFO